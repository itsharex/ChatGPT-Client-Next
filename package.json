{
  "name": "chatgpt-client-next",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build-check": "run-p type-check build-only",
    "preview": "vite preview",
    "build": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postinstallmac": "git config core.hooksPath .husky && chmod 700 .husky/*",
    "eslint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{vue,ts,js,tsx}\" --fix",
    "commit": "git add . && git-cz"
  },
  "dependencies": {
    "@arco-design/web-vue": "^2.45.0",
    "@traptitech/markdown-it-katex": "^3.6.0",
    "axios": "^1.3.5",
    "file-saver": "^2.0.5",
    "gpt-token-utils": "^1.2.0",
    "highlight.js": "^11.7.0",
    "less": "^4.1.3",
    "lodash-es": "^4.17.21",
    "markdown-it": "^13.0.1",
    "markdown-it-link-attributes": "^4.0.1",
    "openai": "^3.2.1",
    "pinia": "^2.0.34",
    "pinia-plugin-persistedstate": "^3.1.0",
    "qrcanvas": "^3.1.2",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-angular": "^17.4.4",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/file-saver": "^2.0.5",
    "@types/katex": "^0.16.0",
    "@types/lodash-es": "^4.17.7",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-legacy": "^4.0.2",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "commitizen": "^4.3.0",
    "cz-customizable": "^6.9.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vue": "^9.10.0",
    "husky": "^8.0.3",
    "inquirer": "^8.2.5",
    "lint-staged": "^12.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "typescript": "~4.8.4",
    "unplugin-auto-import": "^0.15.2",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.2.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-qrcode": "^0.2.1",
    "vite-plugin-windicss": "^1.8.10",
    "vue-tsc": "^1.2.0",
    "windicss": "^3.5.6"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "npm run eslint"
    ],
    "*.{js,jsx,ts,tsx,md,html,css,lees,scss,sass}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
